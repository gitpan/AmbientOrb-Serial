#!perl

use Test::More qw(no_plan);

BEGIN {
	use_ok( 'AmbientOrb::Serial' );
}

diag( "Testing AmbientOrb::Serial $AmbientOrb::Serial::VERSION, Perl $], $^X" );
my $orb = AmbientOrb::Serial->new({ config_file => "C:\\orb\\cfg.txt" } );
ok( "C:\\orb\\cfg.txt" eq $orb->config_file );
ok( $orb->connect() == 1 );
